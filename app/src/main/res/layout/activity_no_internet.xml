<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_lg"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UI.NoInternetActivity">

    <ImageView
        android:id="@+id/img_no_internet"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="No Internet"
        android:layout_marginBottom="@dimen/spacing_sm"
        android:src="@drawable/no_internet" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Internet Connection"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorOnBackground"
        android:gravity="center"
        android:layout_marginBottom="@dimen/spacing_sm" />

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app works online for the first launch to download required data. After that, you can use it offline."
        android:textSize="14sp"
        android:textColor="@color/colorOnSurfaceVariant"
        android:gravity="center"
        android:layout_marginBottom="@dimen/spacing_md" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_retry"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:minHeight="@dimen/button_min_height"
        android:text="Retry" />

</LinearLayout>
