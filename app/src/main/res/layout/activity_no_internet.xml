<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UI.NoInternetActivity">

    <!-- No Internet Illustration / Logo -->
    <ImageView
        android:id="@+id/img_no_internet"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="No Internet"
        android:layout_marginBottom="12dp"
        android:src="@drawable/no_internet" />

    <!-- Title -->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Internet Connection"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorOnBackground"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/txt_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app works online for the first launch to download required data. After that, you can use it offline."
        android:textSize="14sp"
        android:textColor="@color/colorOnSurface"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Retry Button -->
    <Button
        android:id="@+id/btn_retry"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:text="Retry"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/colorOnPrimary"
        android:backgroundTint="@color/colorPrimary" />

</LinearLayout>
