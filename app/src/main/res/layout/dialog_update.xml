<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lg"
    android:background="@drawable/bg_dialog_round"
    android:elevation="6dp">

    <ImageView
        android:id="@+id/iv_update_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_md"
        android:contentDescription="App update icon"
        android:src="@drawable/bm_college_logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Application Update"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorOnSurface"
        android:gravity="center"
        android:layout_marginBottom="@dimen/spacing_sm" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_update_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A newer version of this application is available.\n\n• Performance improvements\n• UI stability updates\n• General bug fixes"
        android:textSize="14sp"
        android:textColor="@color/colorOnSurfaceVariant"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_later"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:minHeight="@dimen/button_min_height"
            android:text="Remind Later"
            android:background="@android:color/transparent"
            android:textColor="@color/colorOnSurfaceVariant" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="@dimen/button_min_height"
            android:text="Update"
            android:textColor="@color/colorOnPrimary"
            android:backgroundTint="@color/colorPrimary" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_browser"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:minHeight="@dimen/button_min_height"
            android:text="Open in Browser"
            android:backgroundTint="@color/colorSurfaceVariant"
            android:textColor="@color/colorOnSurfaceVariant" />
    </LinearLayout>

</LinearLayout>
