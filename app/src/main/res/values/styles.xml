<resources>
    <!-- Typography: strong hierarchy, semibold titles, regular/medium body -->
    <style name="TextAppearance.App.Heading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.SectionHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.ItemTitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnSurfaceVariant</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorOnSurfaceVariant</item>
    </style>

    <!-- Cards: 14â€“18dp corners, elevation, no harsh borders -->
    <style name="Widget.App.Card.Current" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <style name="Widget.App.Card.Upcoming" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_md</item>
        <item name="cardElevation">@dimen/elevation_surface</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <style name="Widget.App.Card.Previous" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_sm</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="android:alpha">0.88</item>
    </style>

    <!-- Chip: accent (muted plum) for status -->
    <style name="Widget.App.Chip.Status" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorOnAccent</item>
        <item name="chipCornerRadius">@dimen/radius_sm</item>
        <item name="chipIconVisible">false</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- Input: rounded 14dp, primary stroke -->
    <style name="ShapeAppearance.App.Input" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_sm</item>
    </style>

    <style name="Widget.App.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/colorOnSurfaceVariant</item>
        <item name="helperTextTextColor">@color/colorOnSurfaceVariant</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Input</item>
    </style>

    <style name="Widget.App.InputLayout.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Input</item>
    </style>

    <style name="Widget.App.InputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Buttons: solid primary, min 48dp -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="rippleColor">@color/colorSurfaceVariant</item>
    </style>
</resources>
